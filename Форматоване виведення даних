import java.text.MessageFormat;
import java.util.Scanner;

public class DataFormatting {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Чтение данных пользователя
        System.out.print("Enter an integer: ");
        int intValue = scanner.nextInt();
        System.out.print("Enter a double: ");
        double doubleValue = scanner.nextDouble();
        System.out.print("Enter a string: ");
        scanner.nextLine(); // Чистим буфер
        String stringValue = scanner.nextLine();
        System.out.print("Enter a boolean: ");
        boolean booleanValue = scanner.nextBoolean();

        // 1. Простой вывод с println
        System.out.println("\n--- Simple Output ---");
        System.out.println("Integer: " + intValue);
        System.out.println("Double: " + doubleValue);
        System.out.println("String: " + stringValue);
        System.out.println("Boolean: " + booleanValue);

        // 2. Форматированный вывод с printf
        System.out.println("\n--- Formatted Output ---");
        System.out.printf("Integer (hex): %x, Double (formatted): %.2f, String: %s, Boolean: %b\n", intValue, doubleValue, stringValue, booleanValue);

        // 3. Форматирование через MessageFormat.format
        System.out.println("\n--- MessageFormat Output ---");
        String template = "Integer: {0,number,#}, Double: {1,number,#.##}, String: {2}, Boolean: {3}";
        String formattedMessage = MessageFormat.format(template, intValue, doubleValue, stringValue, booleanValue);
        System.out.println(formattedMessage);

        scanner.close();
    }
}
