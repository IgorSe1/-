import java.util.Scanner;

public class NumberInputExample {

    public static void main(String[] args) {
      
        Scanner scanner = new Scanner(System.in);

        System.out.print("\nEnter an integer: ");
        int intValue = scanner.nextInt();

        System.out.print("\nEnter a real number (double): ");
        double doubleValue = scanner.nextDouble();
        
        System.out.print("\nEnter a boolean value (true/false): ");
        boolean booleanValue = scanner.nextBoolean();
        
        scanner.nextLine();

        System.out.print("\nEnter a string: ");
        String inputString = scanner.nextLine();

        System.out.printf("Integer: %d, Double: %.2f, Boolean: %b, String: %s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Octal Integer: %o, Double: %.3f, Boolean: %b, String (10 chars): %.10s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Hex Integer: %x, Double: %.4f, Boolean: %b, String (5 chars): %.5s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Integer: %d, Double (5 decimals): %.5f, Boolean: %b, Full String: %s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Octal Integer: %o, Double: %.1f, Boolean: %b, String (8 chars): %.8s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Integer with sign: %+d, Double: %.2f, Boolean: %b, Full String: %s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Hex Integer: %x, Double: %.2f, Boolean: %b, String (15 chars): %.15s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Octal Integer: %o, Double: %.4f, Boolean: %b, String (6 chars): %.6s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Integer: %d, Double (3 decimals): %.3f, Boolean: %b, String (12 chars): %.12s\n", intValue, doubleValue, booleanValue, inputString);

        System.out.printf("Integer: %d, Double: %.2f, Boolean: %b, Full String with message: Your input is '%s'\n", intValue, doubleValue, booleanValue, inputString);

        scanner.close();
    }
}
